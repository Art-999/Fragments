<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <!--<ListView-->
    <!--android:id="@+id/list_view_my_first_fragment"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"></ListView>-->
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="My fragments first"
        android:textColor="#ffff"
        android:textSize="23sp" />

    <Button
        android:id="@+id/attach_second_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="attach second fragment" />

    <Button
        android:id="@+id/remove_second_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/attach_second_fragment_button"
        android:layout_centerHorizontal="true"
        android:text="remove second fragment" />

</RelativeLayout>